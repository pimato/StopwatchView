<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/stopwatch_idle_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopwatch_idle_default_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_textview"
        android:layout_alignParentStart="true"
        android:text="@string/default_textview_timer_content"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_font_size"
        />

    <Button
        android:layout_width="82.5dp"
        android:layout_height="36dp"
        android:id="@+id/stopwatch_idle_start_button"
        android:text="@string/stopwatch_start"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/btn_flat_start"
        android:layout_marginEnd="16dp"
        android:layout_gravity="right" />

</RelativeLayout>