<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stopwatch_running_mainlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopwatch_running_time_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_textview"
        android:layout_alignParentStart="true"
        android:text="lalala"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_font_size"
        />

    <View
        android:id="@+id/stopwatch_running_divider"
        android:layout_height="20dp"
        android:layout_width="1dp"
        android:background="@color/default_divider_color"
        android:layout_toEndOf="@id/stopwatch_running_time_textview"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stopwatch_running_salary_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_money_green"
        android:layout_toEndOf="@id/stopwatch_running_divider"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_font_size"
        />


    <Button
        android:layout_width="82.5dp"
        android:layout_height="36dp"
        android:id="@+id/stopwatch_running_primary_button"
        android:text="@string/stopwatch_stop"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/btn_flat_stop"
        android:layout_marginEnd="16dp"/>

    <Button
        android:layout_width="82.5dp"
        android:layout_height="36dp"
        android:id="@+id/stopwatch_running_secondary_button"
        android:text="@string/stopwatch_pause"
        android:layout_toStartOf="@id/stopwatch_running_primary_button"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/btn_flat_pause"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>