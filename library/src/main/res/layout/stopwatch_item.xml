<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_counter_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_textview"
        android:layout_alignParentStart="true"
        android:text="@string/default_textview_timer_content"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_font_size"
        />

    <View
        android:id="@+id/divider_id"
        android:visibility="invisible"
        android:layout_height="20dp"
        android:layout_width="1dp"
        android:background="@color/default_divider_color"
        android:layout_toEndOf="@id/timer_counter_textview"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salary_counter_textview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_money_green"
        android:layout_toEndOf="@id/divider_id"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_font_size"
        android:visibility="invisible"
        />


    <Button
        android:layout_width="82.5dp"
        android:layout_height="36dp"
        android:id="@+id/button_stopwatch"
        android:text="@string/stopwatch_start"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        android:layout_marginEnd="16dp"/>

    <Button
        android:layout_width="82.5dp"
        android:layout_height="36dp"
        android:id="@+id/button_stop"
        android:visibility="invisible"
        android:text="@string/stopwatch_pause"
        android:layout_toStartOf="@id/button_stopwatch"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        android:layout_marginEnd="8dp"/>

</merge>